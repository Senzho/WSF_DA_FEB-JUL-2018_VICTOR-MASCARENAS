<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenPrestadorBusqueda"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/person" />

    <TextView
        android:id="@+id/textNombreTrabajador"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nombre trabajador"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imagenPrestadorBusqueda"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDistanciaPrestador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="Distancia."
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/imagenPrestadorBusqueda"
        app:layout_constraintTop_toBottomOf="@+id/textNombreTrabajador" />

    <TextView
        android:id="@+id/textDescripcionPrestador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="DescripciÃ³n laboral."
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDistanciaPrestador" />

    <ImageView
        android:id="@+id/imagenEstrellaTrabajador"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/textEstrellasTrabajador"
        app:layout_constraintTop_toBottomOf="@+id/textNombreTrabajador"
        app:srcCompat="@mipmap/star_fill" />

    <TextView
        android:id="@+id/textEstrellasTrabajador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:text="0"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>