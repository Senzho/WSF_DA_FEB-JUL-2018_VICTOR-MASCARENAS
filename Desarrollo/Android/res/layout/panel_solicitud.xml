<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenSolicitanteSolicitud"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/person" />

    <TextView
        android:id="@+id/textDescripcionSolicitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n solicitud."
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFechaSolicitud" />

    <TextView
        android:id="@+id/textFechaSolicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Fecha."
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imagenSolicitanteSolicitud"
        app:layout_constraintTop_toBottomOf="@+id/textNombreSolicitanteSolicitud" />

    <Button
        android:id="@+id/botonAceptarSolicitud"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="botonAceptar_onClick"
        android:text="Aceptar"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDescripcionSolicitud" />

    <Button
        android:id="@+id/botonDenegarSolicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Denegar"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/botonTerminarSolicitud"
        app:layout_constraintTop_toBottomOf="@+id/textDescripcionSolicitud" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/info"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textNombreSolicitanteSolicitud" />

    <TextView
        android:id="@+id/textEstadoSolicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="5dp"
        android:text="Estado."
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textNombreSolicitanteSolicitud" />

    <Button
        android:id="@+id/botonTerminarSolicitud"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:text="Terminar"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDescripcionSolicitud" />

    <TextView
        android:id="@+id/textNombreSolicitanteSolicitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Nombre solicitante."
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/imagenSolicitanteSolicitud"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>