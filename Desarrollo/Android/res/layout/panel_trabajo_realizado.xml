<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenSolicitanteTrabajo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/person" />

    <TextView
        android:id="@+id/textNombreSolicitanteTrabajo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:text="Nombre de solicitante."
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/imagenSolicitanteTrabajo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDescripcionTrabajo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="DescripciÃ³n trabajo."
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imagenSolicitanteTrabajo"
        app:layout_constraintTop_toBottomOf="@+id/textNombreSolicitanteTrabajo" />

    <TextView
        android:id="@+id/textFechaTrabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="0dp"
        android:text="Fecha."
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombreSolicitanteTrabajo" />
</android.support.constraint.ConstraintLayout>